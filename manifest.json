{
  "manifest_version": 3,
  "name": "Lark Quote Converter",
  "version": "1.0",
  "description": "Automatically converts smart quotes to standard quotes when copying from Lark documents",
  "permissions": ["clipboardWrite", "clipboardRead", "activeTab"],
  "content_scripts": [
    {
      "matches": [
        "*://*.larksuite.com/*", 
        "*://*.feishu.cn/*", 
        "*://*.lark.com/*",
        "*://*.sg.larksuite.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/lark-quote-converter"
} 